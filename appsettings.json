{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=LEONARDO;Initial Catalog=SYSTEMPAG;Integrated Security=True"
    /* A chave "ConnectionStrings" define as configurações de conexão com o banco de dados.
       A conexão padrão ("DefaultConnection") utiliza um banco de dados chamado "SYSTEMPAG" no servidor "LEONARDO"
       com autenticação integrada (Integrated Security=True). */
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
    /* A seção "Logging" configura os níveis de log para diferentes categorias.
       O nível de log padrão é "Information", enquanto para a categoria "Microsoft.AspNetCore" é "Warning". */
  },
  "AllowedHosts": "*"
  /* A chave "AllowedHosts" permite que qualquer host faça solicitações a este aplicativo (*).
     Isso pode ser ajustado para restringir a lista de hosts permitidos. */
}
