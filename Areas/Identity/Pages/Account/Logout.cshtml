@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<header>
    <h1>@ViewData["Title"]</h1>
    @{
        // Verifica se o usuário está autenticado.
        if (User.Identity?.IsAuthenticated ?? false)
        {
            // Se o usuário estiver autenticado, exibe um formulário para fazer logout.
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Clique aqui para sair</button>
            </form>
        }
        else
        {
        // Se o usuário não estiver autenticado, exibe uma mensagem de logout bem-sucedido.
            <p>You have successfully logged out of the application.</p>
        }
    }
</header>
