@page
@model ChangePasswordModel

@{
    // Define o título da página
    ViewData["Title"] = "Atualizar senha";

    // Define a página ativa na barra de navegação
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h3>@ViewData["Title"]</h3>
<!-- Renderiza a mensagem de status parcial -->
<partial name="_StatusMessage" for="StatusMessage" />

<div class="row">
    <div class="col-md-6">
        <!-- Início do formulário de atualização de senha -->
        <form id="change-password-form" method="post">
            <!-- Renderiza mensagens de validação do modelo, se houverem -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Campo para a senha antiga -->
            <div class="form-floating">
                <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" />
                <label asp-for="Input.OldPassword" class="form-label"></label>
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>

            <!-- Campo para a nova senha -->
            <div class="form-floating">
                <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.NewPassword" class="form-label" ></label>
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>

            <!-- Campo para a confirmação da nova senha -->
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <!-- Botão de envio do formulário -->
            <button type="submit" class="w-100 btn btn-lg btn-primary">Atualizar senha</button>
        </form>
        <!-- Fim do formulário de atualização de senha -->
    </div>
</div>

@section Scripts {
    <!-- Renderiza os scripts de validação parciais -->
    <partial name="_ValidationScriptsPartial" />
}
