@page
@model IndexModel

@{
    // Define o título da página
    ViewData["Title"] = "Perfil";

    // Define a página ativa na barra de navegação
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<!-- Renderiza a mensagem de status parcial -->
<partial name="_StatusMessage" for="StatusMessage" />

<div class="row">
    <div class="col-md-6">
        <!-- Início do formulário de perfil -->
        <form id="profile-form" method="post">
            <!-- Renderiza mensagens de validação do modelo -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Campo para o nome do usuário, desabilitado e preenchido com o valor do modelo -->
            <div class="form-floating">
                <input asp-for="Name" class="form-control" value="@Model.Name" disabled />
                <label asp-for="Name" class="form-label"></label>
            </div>

            <!-- Campo para o CPF do usuário, desabilitado e preenchido com o valor do modelo -->
            <div class="form-floating">
                <input asp-for="CPF" class="form-control" value="@Model.CPF" disabled />
                <label asp-for="CPF" class="form-label"></label>
            </div>

            <!-- Campo para a empresa do usuário, desabilitado e preenchido com o valor do modelo -->
            <div class="form-floating">
                <input asp-for="Company" class="form-control" value="@Model.Company" disabled />
                <label asp-for="Company" class="form-label"></label>
            </div>

            <!-- Campo para o CNPJ do usuário, desabilitado e preenchido com o valor do modelo -->
            <div class="form-floating">
                <input asp-for="CNPJ" class="form-control" value="@Model.CNPJ" disabled />
                <label asp-for="CNPJ" class="form-label"></label>
            </div>

            <!-- Campo para o número de telefone do usuário, com validação e edição permitida -->
            <div class="form-floating">
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <!-- Botão para atualizar o perfil -->
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Salvar</button>
        </form>
        <!-- Fim do formulário de perfil -->
    </div>
</div>

@section Scripts {
    <!-- Renderiza os scripts de validação parciais -->
    <partial name="_ValidationScriptsPartial" />
}
